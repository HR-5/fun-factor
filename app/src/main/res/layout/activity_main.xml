<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="100dp"
        android:hint="@string/Edit"
        android:autofillHints="@string/Edit"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text=""
        tools:ignore="LabelFor,RelativeOverlap" />

    <Button
        android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="400dp"
        android:text="@string/i"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap"
        android:onClick="findAnswer"
        android:visibility="invisible" />

    <Button
        android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:textSize="20sp"
        android:text="@string/ii"
        tools:ignore="RelativeOverlap"
        android:onClick="findAnswer"
        android:visibility="invisible" />

    <Button
        android:id="@+id/op3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="@string/iii"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap"
        android:onClick="findAnswer"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="303dp"
        android:gravity="center"
        android:text="@string/Factor"
        android:textColor="@color/sc"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:onClick="dispOptions"
        android:text="@string/go"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/disp"
        android:layout_width="268dp"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="279dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/fun_factor"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/fun"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="186dp"
        android:gravity="center"
        android:text="@string/current_score_0"
        android:textColor="@color/sc"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:gravity="center"
        android:text="@string/best_score"
        android:textColor="@color/sc"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/time"
        android:layout_width="131dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/sc" />
</RelativeLayout>